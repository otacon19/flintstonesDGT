<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="sinbad2.resolutionphase.framework.ui.FrameworkPerspective"
            id="flintstones.resolutionphase.framework.perspective"
            name="%framework.perspective.name">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="flintstones.resolutionphase.framework.perspective">
         <view
               closeable="false"
               id="flintstones.element.ui.view.experts"
               minimized="false"
               moveable="false"
               ratio="0.5"
               relationship="top"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="flintstones.element.ui.view.alternatives"
               minimized="false"
               moveable="false"
               ratio="0.33"
               relationship="right"
               relative="flintstones.element.ui.view.experts"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="flintstones.resolutionphase.ui">
      <ui
            id="flintstones.resolutionphase.framework.ui"
            name="%resolution.phase.ui.name"
            resolution_phase="flintstones.resolutionphase.framework">
         <perspective
               id="flintstones.resolutionphase.framework.perspective">
         </perspective>
      </ui>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=flintstones.menu.edit">
         <menu
               id="flintstones.menu.framework"
               label="Framework"
               mnemonic="F">
         </menu>
      </menuContribution>
   </extension>

</plugin>
